<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raquel.tccalfabetaja.Tela_sistema">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <ImageButton
            android:id="@+id/imageButton_Configuracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:onClick="onClickCFG"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <ImageButton
            android:id="@+id/modulo_Vogais"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/imageButton_Configuracao"
            android:layout_alignStart="@+id/modulo_Silabas" />

        <ImageButton
            android:id="@+id/modulo_Consoantes"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="37dp"
            android:layout_weight="0"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_marginEnd="40dp"
            android:layout_below="@+id/modulo_alfabeto"
            android:layout_toStartOf="@+id/modulo_Silabas" />

        <ImageButton
            android:id="@+id/modulo_frases"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="0"

            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_below="@+id/modulo_Silabas"
            android:layout_alignStart="@+id/modulo_Silabas"
            android:layout_marginTop="28dp" />

        <ImageButton
            android:id="@+id/modulo_alfabeto"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/modulo_Consoantes"
            android:layout_alignTop="@+id/modulo_Vogais"
            android:layout_weight="0"
            app:srcCompat="@android:color/holo_blue_bright" />

        <ImageButton
            android:id="@+id/modulo_Silabas"
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_marginEnd="17dp"
            android:layout_alignTop="@+id/modulo_Consoantes"
            android:layout_toStartOf="@+id/imageButton_Configuracao" />

        <ImageButton
            android:id="@+id/modulo_Palavras"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_alignTop="@+id/modulo_frases"
            android:layout_alignStart="@+id/modulo_Consoantes" />
        <ImageButton
            android:id="@+id/modulo_cores"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="0"

            app:srcCompat="@android:color/holo_blue_bright"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/modulo_Palavras"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:id="@+id/modulo_Numeros"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/modulo_frases"
            android:layout_alignTop="@+id/modulo_cores"
            android:layout_weight="0"
            app:srcCompat="@android:color/holo_blue_bright" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
