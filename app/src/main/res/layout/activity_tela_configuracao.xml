<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raquel.tccalfabetaja.Tela_configuracao">

    <RelativeLayout
        android:id="@+id/buttonL"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="44dp"
            android:onClick="onClickCrianca"
            android:text="Button"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageViewADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_toEndOf="@+id/textView2"
            app:srcCompat="@mipmap/add" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignStart="@+id/buttonC"
            android:layout_marginBottom="12dp"
            android:text="Conta" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Alterar senha"
            android:layout_below="@+id/buttonC"
            android:layout_alignEnd="@+id/buttonC" />

        <EditText
            android:id="@+id/editTextASenha"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="17dp" />

        <Button
            android:id="@+id/buttonSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextASenha"
            android:layout_alignTop="@+id/imageViewADD"
            android:text="Salvar" />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
